{% extends "base.html.twig" %}

{% block body %}
	<h2>Nation</h2>
	<p>
		<a href="{{ url('admin.nation.form.add') }}" class="btn btn-info">Add</a>
	</p>

	{# affichage des messages flash #}
	{% for notice in app.flashes('notice') %}
		<p class="alert alert-success">{{ notice }}</p>
	{% endfor %}

	<table class="table table-striped">
		<tr>
			<th>Name</th>
			<th>Drapeau</th>
			<th>Actions</th>
			<th></th>
		</tr>
		{% for nation in entities %}
			<tr>
				<td>{{ (nation.name) | title }}</td>
				<td><img src="{{ asset('img/' ~ nation.image) }}" class="img-fluid" alt="" style="width:40px;heigth:30px"></td>
				
				<td>
					<a href="{{ url('admin.nation.form.edit', { id: nation.id }) }}" class="btn btn-warning">Edit</a>
					<a href="{{ url('admin.nation.remove', { id: nation.id }) }}" class="btn btn-danger">Remove</a>
				</td>
			</tr>
		{% endfor %}
	</table>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/admin.js') }}" defer></script>
{% endblock %}